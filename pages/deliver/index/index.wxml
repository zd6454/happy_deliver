<!--pages/deliver/index/index.wxml-->
<view class="page">
    <view class="map">
      <map id="myMap"  show-location="true"   class="mapdetail" longitude="{{longitude}}" latitude="{{latitude}}" scale="12" markers="{{markers}}" polyline="{{polyline}}"  >
      
      </map>
    </view>
    <view class="body">
     <button catchtouchmove="buttonMove" bindtouchstart ="buttonStart" bindtouchend="buttonEnd" style="top:{{buttonTop}}px;left:{{buttonLeft}}px;width:150rpx;" bindtap="deliverStart" hover-class="fixbtn2" class="{{isDeliver==true?'fixbtn1':'fixbtn'}}">
      {{buttomtext}}
     </button>
    </view>
    <view class="foot">
       <view class="current">
        <view class="currentset">
          <text>{{currentTime}}</text>
        </view>
        <text>当前时间</text>
       </view>
       <view class="pass">
         <view class="passset">
           <text>{{passTime}}min</text>
         </view>
         <text>已用时间</text>
       </view>
       <view class="last">
         <view  class="lastset" >
          <text>{{lastTime}}</text>
         </view>
         
         <text>最晚时间</text>
       </view>
    </view>
</view>
